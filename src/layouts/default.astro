---
import Header from "../components/Header.astro";
import Nav from "../components/Nav.astro";
import "../styles/main.css";
---

<!DOCTYPE html>
<html lang="en" class="bg-gradient-to-b from-base to-deep min-h-screen font-sans">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cameron Moore Full-Stack Developer</title>
  </head>
  <body class="flex h-full flex-col items-center bg-base bg-top bg-no-repeat max-w-5xl mx-auto px-4 py-8">
      <div class="flex items-center justify-center max-w-5xl">
        <div class="flex gap-4 min-w-5xl">
          <Header>
            <Nav />
          </Header>
        </div>
      </div>
    <main class="max-w-5xl mx-auto">
      <section class="max-w-2xl lg:max-w-5xl mx-auto mb-12 flex justify-center">
        <slot />
      </section>
    </main>
  </body>
</html>

