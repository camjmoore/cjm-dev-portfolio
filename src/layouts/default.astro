---
import Nav from "../components/Nav.astro";
---

<!DOCTYPE html>
<html lang="en" class="bg-gradient-to-b from-base to-deep min-h-screen font-sans">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Cjmoore Portfolio & Blog</title>
    </head>

    <body class="min-h-screen bg-top bg-no-repeat">
        <div class="mx-auto h-20 max-w-full">
            <div class="mx-auto flex-column h-full max-w-4xl items-center justify-center sm:justify-start md:justify-between">
                <div class="flex flex-1 items-center justify-center h-20 max-w-full mx-auto">

                    <Nav/>

                </div>
                <div class="border-solid border-2 border-pierce sm:px-8">
                    <div class="border-solid border-2 border-pierce lg:px-12 mx-auto max-w-5xl">
                        <div class="border-solid border-2 border-pierce sm:px-8 lg:px-12 px-4 relative">
                            <div class="border-solid border-2 border-pierce lg:max-w-5xl max-w-2xl mb-12 mx-auto">
                                <div class="border-solid border-2 border-pierce flex justify-center">

                                    <slot />

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
