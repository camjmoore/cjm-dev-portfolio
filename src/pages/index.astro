---
import Layout from "../layouts/default.astro";
import { Image } from "astro:assets";
// import MyEmoji from "../assets/cjm-dev-merc.png";
import Headshot from "../assets/headshot-bw.png";
import Icon from "../components/Icon/Icon.astro";
---

<Layout>
	<div class="space-y-12">
		<div class="flex flex-col md:flex-row items-center md:items-start gap-8">
			<div class="h-22 w-22 overflow-hidden rounded-full border-2 border-deep bg-surface flex items-center justify-center">
				<Image src={Headshot} alt="emoji of a web dev mercenary with a mustache" width={175} height={175}/>
			</div>
			<div class="text-center md:text-left">
				<h2 class="text-4xl md:text-5xl font-bold text-white mb-3">Cameron J Moore</h2>
				<p class="text-xl text-white mb-6">Full-Stack Developer</p>
				<p class="text-subtle max-w-2xl leading-relaxed mb-6">
					Passionate about creating intuitive and performant web experiences. I specialize in modern 
					JavaScript frameworks, responsive design, and occasionally venture into full-stack territory.
				</p>
				<div class="flex flex-wrap gap-4 justify-center md:justify-start">
					<a href="/projects" class="px-6 py-2 bg-orange-400 text-white rounded-lg hover:bg-orange-500 transition-colors font-medium">
						View Projects
					</a>
					<a href="mailto:hello@cjmoore.dev" class="px-6 py-2 border border-orange-400 text-orange-400 rounded-lg hover:bg-orange-400 hover:text-white transition-all">
						Contact Me
					</a>
				</div>
			</div>
		</div>

		<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
			<div class="bg-surface/50 backdrop-blur-sm rounded-lg p-8 border border-muted/20">
				<h2 class="text-2xl font-semibold text-foam mb-6">Technical Expertise</h2>
				<div class="space-y-4">
					<div>
						<h3 class="text-dawn mb-3">Frontend Development</h3>
						<div class="flex flex-wrap gap-2">
							{['React', 'Next.js', 'TypeScript', 'Tailwind CSS'].map(skill => (
								<span class="px-3 py-1 bg-overlay rounded-lg text-sm text-subtle border border-muted/30">
									{skill}
								</span>
							))}
						</div>
					</div>
					<div>
						<h3 class="text-dawn mb-3">Backend Development</h3>
						<div class="flex flex-wrap gap-2">
							{['Node.js', 'Python', 'PostgreSQL', 'GraphQL'].map(skill => (
								<span class="px-3 py-1 bg-overlay rounded-lg text-sm text-subtle border border-muted/30">
									{skill}
								</span>
							))}
						</div>
					</div>
					<div>
						<h3 class="text-dawn mb-3">DevOps & Tools</h3>
						<div class="flex flex-wrap gap-2">
							{['Docker', 'AWS', 'CI/CD', 'Git'].map(skill => (
								<span class="px-3 py-1 bg-overlay rounded-lg text-sm text-subtle border border-muted/30">
									{skill}
								</span>
							))}
						</div>
					</div>
				</div>
			</div>

			<div class="bg-surface/50 backdrop-blur-sm rounded-lg p-8 border border-muted/20">
				<h2 class="text-2xl font-semibold text-foam mb-6">Professional Network</h2>
				<div class="space-y-6">
					<a 
						href="https://github.com/cjmoore" 
						class="flex items-center gap-4 text-subtle hover:text-dawn transition-colors group"
					>
						<div class="w-12 h-12 bg-mint/20 border border-mint/30 rounded-full px-2 flex items-center justify-center group-hover:border-mint transition-colors">
							<Icon name="github"/>
						</div>
						<div>
							<h3 class="text-dawn mb-1">GitHub</h3>
							<p class="text-sm">View my open-source contributions</p>
						</div>
					</a>
					<a 
						href="https://linkedin.com/in/cjmoore" 
						class="flex items-center gap-4 text-subtle hover:text-dawn transition-colors group"
					>
						<div class="w-12 h-12 bg-sleep/30 border border-sleep/40 rounded-full px-2 flex items-center justify-center group-hover:border-sleep transition-colors">
							<Icon name="linkedin"/>
						</div>
						<div>
							<h3 class="text-dawn mb-1">LinkedIn</h3>
							<p class="text-sm">Connect with me professionally</p>
						</div>
					</a>
					<a 
						href="mailto:hello@cjmoore.dev" 
						class="flex items-center gap-4 text-subtle hover:text-dawn transition-colors group"
					>
						<div class="w-12 h-12 bg-dawn/20 border border-dawn/30 rounded-full flex items-center justify-center  group-hover:border-dawn transition-colors">
							<Icon name="email"/>
						</div>
						<div>
							<h3 class="text-dawn mb-1">Email</h3>
							<p class="text-sm">hello@cjmoore.dev</p>
						</div>
					</a>
				</div>
			</div>
		</div>
	</div>
</Layout>
